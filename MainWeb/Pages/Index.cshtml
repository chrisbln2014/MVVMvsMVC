@page
@model MainWeb.Pages.IndexModel
@{
    ViewData["Title"] = "MVVM vs MVC";
}

<div class="container py-4">
    <header class="text-center mb-4">
        <h1 class="display-5">ASP.NET Core 架構比較</h1>
    </header>
    
    <!-- 兩種模式卡片 -->
    <div class="row g-4 justify-content-center mb-4">
        <!-- MVVM 卡片 -->
        <div class="col-md-5">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="fs-5 mb-0">MVVM 模式</h2>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text">Model-View-ViewModel 設計模式</p>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item">✓ 使用 Razor Pages</li>
                        <li class="list-group-item">✓ 以頁面為單位組織程式碼</li>
                    </ul>
                    <div class="mt-auto">
                        <a href="@Url.Page("/Customers")" class="btn btn-primary w-100">
                            查看 MVVM 實現
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- MVC 卡片 -->
        <div class="col-md-5">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h2 class="fs-5 mb-0">MVC 模式</h2>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text">Model-View-Controller 設計模式</p>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item">✓ 使用控制器處理請求</li>
                        <li class="list-group-item">✓ 按功能組織程式碼</li>
                    </ul>
                    <div class="mt-auto">
                        <a href="@Url.Action("Index", "Customer")" class="btn btn-success w-100">
                            查看 MVC 實現
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 簡明比較表 -->
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h2 class="fs-5 mb-0">兩種架構比較</h2>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>特性</th>
                                    <th>MVVM (Razor Pages)</th>
                                    <th>MVC</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>架構焦點</td>
                                    <td>頁面導向</td>
                                    <td>控制器導向</td>
                                </tr>
                                <tr>
                                    <td>適合場景</td>
                                    <td>表單應用、簡單網站</td>
                                    <td>複雜應用、API 開發</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>