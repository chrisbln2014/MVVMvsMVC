@page
@model MainWeb.Pages.IndexModel
@{
    ViewData["Title"] = "MVVM vs MVC";
}

<div class="container py-4">
    <header class="text-center mb-4">
        <h1 class="display-5">ASP.NET Core 架構比較</h1>
    </header>
    
    <!-- 架構卡片 -->
    <div class="row g-4 justify-content-center mb-4">
        <!-- MVVM 卡片 -->
        <div class="col-md-5">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="fs-5 mb-0">MVVM 模式</h2>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text">Model-View-ViewModel 設計模式</p>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item">✓ 使用 Razor Pages</li>
                        <li class="list-group-item">✓ 以頁面為單位組織程式碼</li>
                    </ul>
                    <div class="mt-auto">
                        <a href="@Url.Page("/Customers")" class="btn btn-primary w-100">
                            查看 MVVM 實現
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- MVC 卡片 -->
        <div class="col-md-5">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h2 class="fs-5 mb-0">MVC 模式</h2>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text">Model-View-Controller 設計模式</p>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item">✓ 使用控制器處理請求</li>
                        <li class="list-group-item">✓ 按功能組織程式碼</li>
                    </ul>
                    <div class="mt-auto">
                        <a href="@Url.Action("Index", "Customer")" class="btn btn-success w-100">
                            查看 MVC 實現
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Blazor Server 卡片 -->
        <div class="col-md-5">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-info text-white">
                    <h2 class="fs-5 mb-0">Blazor Server</h2>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text">服務器端 Blazor 應用程式</p>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item">✓ 即時互動性</li>
                        <li class="list-group-item">✓ SignalR 即時通訊</li>
                    </ul>
                    <div class="mt-auto">
                        <a href="/blazor-server/customers" class="btn btn-info w-100">
                            查看 Blazor Server
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Blazor WebAssembly 卡片 -->
        <div class="col-md-5">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-warning">
                    <h2 class="fs-5 mb-0">Blazor WebAssembly</h2>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text">客戶端 Blazor 應用程式</p>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item">✓ 瀏覽器端執行</li>
                        <li class="list-group-item">✓ 離線支援</li>
                    </ul>
                    <div class="mt-auto">
                        <a href="/blazor-wasm/customers" class="btn btn-warning w-100">
                            查看 Blazor WebAssembly
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 架構比較表 -->
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h2 class="fs-5 mb-0">架構比較</h2>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>特性</th>
                                    <th>MVVM (Razor Pages)</th>
                                    <th>MVC</th>
                                    <th>Blazor Server</th>
                                    <th>Blazor WebAssembly</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>架構焦點</td>
                                    <td>頁面導向</td>
                                    <td>控制器導向</td>
                                    <td>元件導向</td>
                                    <td>元件導向</td>
                                </tr>
                                <tr>
                                    <td>適合場景</td>
                                    <td>表單應用、簡單網站</td>
                                    <td>複雜應用、API 開發</td>
                                    <td>即時應用、需要低延遲</td>
                                    <td>離線應用、SPA</td>
                                </tr>
                                <tr>
                                    <td>執行位置</td>
                                    <td>服務器端</td>
                                    <td>服務器端</td>
                                    <td>服務器端</td>
                                    <td>瀏覽器端</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>